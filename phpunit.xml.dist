<?xml version="1.0" encoding="UTF-8"?>

<phpunit
    backupGlobals = "false"
    colors        = "true"
    bootstrap     = "tests/bootstrap.php" >

    <php>
        <ini name="error_reporting" value="-1" />
    </php>

    <testsuites>
        <testsuite name="GitHub Web Hook Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
</phpunit>
