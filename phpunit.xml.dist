<?xml version="1.0" encoding="UTF-8"?>

<phpunit
    backupGlobals = "false"
    colors        = "true"
    bootstrap     = "tests/bootstrap.php" >

    <testsuites>
        <testsuite name="GitHub Web Hook Security Checker Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
</phpunit>
